Gem::Specification.new do |s|
  s.name        = 'crds-styles'
  s.version     = '2.3.0'
  s.licenses    = ['BSD-3']
  s.summary     = "Shared styles for crossroads.net"
  s.description = "crds-styles provides the primary CSS framework and global style patterns that power crossroads.net and its related properties."
  s.files      = `git ls-files`.split("\n")
  s.homepage    = "https://design.crossroads.net/"
  s.metadata    = { "source_code_uri" => "https://github.com/crdschurch/crds-styles" }
end
